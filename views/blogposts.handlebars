<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New BlogPost:</h3>

    <form class="form new-BlogPost-form">
      <div class="form-group">
        <label for="BlogPost-title">BlogPost title:</label>
        <input class="form-input" type="text" id="BlogPost-title" name="BlogPost-title" />
      </div>
      <div class="form-group">
        <label for="BlogPost-desc">BlogPost description:</label>
        <textarea class="form-input" id="BlogPost-desc" name="BlogPost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if BlogPosts.length}}
  <div class="col-md-6 BlogPost-list">
    <h3>Current BlogPosts:</h3>

    {{#each BlogPosts as |BlogPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogposts/{{BlogPost.id}}">{{BlogPost.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{BlogPost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/BlogPosts.js"></script>
