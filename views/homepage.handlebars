<!-- Loop over each object in the projects array -->
{{#each BlogPosts as |BlogPosts|}}
<div class="row mb-4 BlogPosts">
  <div class="col-md-5">
    <h2>
      <a href="/blogposts/{{id}}">{{BlogPosts.title}} {{BlogPosts.contents}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <h3>Comments:</h3>
    {{#each comments}}
    <p>{{description}}</p>
    {{/each}}
  </div>
</div>
{{/each}}

